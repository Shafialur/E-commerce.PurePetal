<%- include('../adminheader/adminheader') %>  
        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title">Categories</h2>

            </div>
            <form action="" method="post" onsubmit="return validateForm()">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <div class="row">
                            <% if (typeof message !=='undefined' ) { %>
                                <p class="text-danger text-left">
                                    <%= message %>
                                </p>
                                <% } %>
                            <div class="col-md-12 text-left">
                                <img id="watchImage"
                                    src="https://images.samsung.com/is/image/samsung/p6pim/in/sm-r930nzkains/gallery/in-galaxy-watch6-r935-sm-r930nzkains-539690887?$2052_1641_PNG$"
                                    alt="" class="img-fluid" style="width: 150px; height: auto; margin-bottom: 10px;">
                                <br>
                                <label for="newImage">New Image URL:</label>
                                <input type="text" id="newImage" class="form-control" name="imageurl"
                                    placeholder="Enter new image URL" required>
                                <br>
                                <label for="title">Title:</label>
                                <input type="text" id="title" name="title" class="form-control"
                                    placeholder="Enter title" required>
                                <br>
                                <label for="description">Description:</label>
                                <textarea id="description" name="description" class="form-control"
                                    placeholder="Enter description" required></textarea>
                                <br>
                                <input type="submit" class="btn btn-primary" value="Add">
                                <hr>
                            </div>
                        </div>
                    </div> <!-- card-body end// -->
                </div>
            </form>

            <script>
                function validateForm() {
                    // Get form elements
                    let imageurlInput = document.getElementById('newImage');
                    let titleInput = document.getElementById('title');
                    let descriptionInput = document.getElementById('description');

                    // Check if any input field is empty
                    if (imageurlInput.value.trim() === '' || titleInput.value.trim() === '' || descriptionInput.value.trim() === '') {
                        alert('Please fill out all fields.');
                        return false; // Prevent form submission
                    }
                    return true; // Allow form submission
                }
            </script>




