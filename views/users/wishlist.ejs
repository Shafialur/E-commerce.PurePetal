<%- include('../userheader/userheader') %>
            <main class="main">
                <div class="page-header breadcrumb-wrap">
                    <div class="container">
                        <div class="breadcrumb">
                            <a href="index.html" rel="nofollow">Home</a>
                            <span></span> Shop
                            <span></span> Wishlist
                        </div>
                    </div>
                </div>
                <section class="mt-50 mb-50">
                    <div class="container">
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table class="table shopping-summery text-center">
                                        <thead>
                                            <tr class="main-heading">
                                                <th scope="col" colspan="2">Product</th>
                                                <th scope="col">Price</th>
                                                <th scope="col">Stock Status</th>
                                                <th scope="col">Action</th>
                                                <th scope="col">Remove</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (wishlistData && wishlistData.products &&
                                                wishlistData.products.length> 0) { %>
                                                <% for (let i=0; i < wishlistData.products.length; i++) { %>
                                                    <tr>
                                                        <td class="image product-thumbnail"><img
                                                                src="/productimages/<%=wishlistData.products[i].productimg[0] %>"
                                                                alt="#"></td>
                                                        <td class="product-des product-name">
                                                            <h5 class="product-name"><a href="shop-product-right.html">
                                                                </a></h5>
                                                            <p class="font-xs">
                                                                <%= wishlistData.products[i].title %>
                                                            </p>
                                                        </td>
                                                        <td class="price" data-title="Price"><span>
                                                                <%= wishlistData.products[i].pprice %>
                                                            </span></td>
                                                        <td class="text-center" data-title="Stock">
                                                            <span class="color3 font-weight-bold">
                                                                <% if (wishlistData.products[i].quantity> 0) { %>
                                                                    In Stock
                                                                    <% } else { %>
                                                                        Out of Stock
                                                                        <% } %>
                                                            </span>
                                                        </td>
                                                        <td class="text-right" style="width: 14%;"  data-title="Cart">
                                                            <button class="btn btn-sm" onclick="addToCart('<%= wishlistData.products[i]._id %>')"><i class="fi-rs-shopping-bag mr-5"></i>Add to
                                                                cart</button>

                                                            <script>
                                                                function addToCart(productId) {
                                                                    window.location.href = '/addtocart?id=' + productId;
                                                                }
                                                            </script>

                                                        </td>
                                                        <td class="action" data-title="Remove"><a href="/deletewishlist?id=<%= wishlistData.products[i]._id%>"><i
                                                                    class="fi-rs-trash"></i></a></td>
                                                    </tr>
                                                    <% } %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="6" class="text-center">
                                                                    <h4>Wishlist is Empty</h4>
                                                                </td>
                                                            </tr>
                                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="container">
                                    <a href="/shoppage" class="button btn-sm btn-secondary">Add More Items In Wishlist</a>
                                </div>
                                <style>
                                    .button{
                                        width: 13rem;
                                        margin-left: 83%;
                                        
                                    }
                                </style>
                            </div>
                        </div>
                    </div>
                </section>
