                    </div>
                </div>

                <div class="col-lg-9">
                    <!-- Main Card -->
                    <div class="card mb-4">
                        <div class="card-header">
                            <h4>Basic</h4>
                        </div>
                        <div class="card-body">
                            <form enctype="multipart/form-data" method="post" onsubmit="return validateForm()">
                                <!-- Product Title -->
                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Product title</label>
                                    <input type="text" placeholder="Type here" class="form-control" name="title"
                                        id="product_name" required>
                                </div>

                                <!-- Full Description -->
                                <div class="mb-4">
                                    <label class="form-label">Full description</label>
                                    <textarea placeholder="Type here" class="form-control" rows="4" name="productdt"
                                        required></textarea>
                                </div>

                                <!-- Media -->
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <h4>Media</h4>
                                    </div>
                                    <style>
                                        #selectedImagesContainer {
                                            display: flex;
                                            flex-direction: row;
                                            /* Display images and buttons in a row */
                                            align-items: center;
                                            /* Center items vertically within the container */
                                            overflow-x: auto;
                                            /* Enable horizontal scrolling if there are too many images */
                                        }

                                        .image-container {
                                            display: flex;
                                            flex-direction: column;
                                            /* Display images and buttons in a column */
                                            align-items: center;
                                            /* Center items horizontally within the container */
                                            margin-right: 10px;
                                            /* Add some spacing between image containers */
                                        }

                                        .image-container img {
                                            max-width: 100px;
                                            /* Set a maximum width for the images */
                                            margin-bottom: 5px;
                                            /* Add some spacing between the image and the delete button */
                                        }

                                        .delete-button {
                                            background-color: #dc3545;
                                            /* Use Bootstrap's danger color for the delete button */
                                            color: #fff;
                                            border: none;
                                            padding: 5px 10px;
                                            cursor: pointer;
                                            margin-bottom: 25px;
                                        }
                                    </style>
                                    <div class="card-body">
                                        <!-- Upload Images -->
                                        <div class="input-upload">
                                            <div id="selectedImagesContainer"></div>
                                            <input class="form-control" type="file" name="images" multiple
                                                onchange="displaySelectedImages(this)" required>
                                        </div>
                                    </div>
                                </div> <!-- Media Card end// -->

                                <!-- Pricing and Category -->
                                <div class="row" style="margin-left: 50px;">
                                    <!-- Regular Price -->
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Regular price</label>
                                            <div class="row gx-2">
                                                <input placeholder="Rs" type="number" name="pprice" class="form-control"
                                                    required>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Promotional Price -->
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Promotional price</label>
                                            <input placeholder="Rs" type="number" name="promoprice" class="form-control"
                                                required>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-left: 50px;">
                                    <div class="col-lg-4">
                                        <div class="mb-4">
                                            <label class="form-label">Quantity</label>
                                            <div class="row gx-2">
                                                <input type="number" name="quantity" class="form-control" required>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Category -->
                                <div class="col-sm-6 mb-3" style="margin-left: 50px;">
                                    <label class="form-label">Category</label>
                                    <select class="form-select" name="category">
                                        <% if (category.length> 0) { %>
                                            <% for (let i=0; i <category.length; i++) { %>
                                                <option>
                                                    <%= category[i].title%>
                                                </option>
                                                <% } %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="5" class="text-center">No Category Found</td>
                                                        </tr>
                                                        <% } %>

                                    </select>
                                </div><br>

                                <!-- Submit Button -->
                                <div class="text-center">
                                    <input type="submit" class="btn btn-md rounded font-sm hover-up"></input>
                                </div><br><br>
                            </form>
                        </div>
                    </div> <!-- Main Card end// -->
                </div>
            </div>
        </section> <!-- content-main end// -->

        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
