    <script>
        function validateForm() {

            let inputs = document.querySelectorAll('input, textarea, select');

            for (let i = 0; i < inputs.length; i++) {
                let input = inputs[i];
                
                if (input.hasAttribute('required') && input.value.trim() === '') {
                    alert('Please fill out all required fields.');
                    return false; 
                }
                // Check if the input type is number and its value is negative
                if (input.type === 'number' && parseFloat(input.value) < 0) {
                    alert('Quantity, regular price, and promotional price cannot be negative.');
                    return false; 
                }
            }
            return true; 
        }
    </script>

    <script>
        function displaySelectedImages(input) {
            const container = document.getElementById('selectedImagesContainer');
            container.innerHTML = ''; // Clear previous images

            // Get the selected files
            const files = input.files;

            for (let i = 0; i < files.length; i++) {
                // Create a FileReader for each file
                const reader = new FileReader();

                // Set up the function to be called after the file is loaded
                reader.onload = function (e) {
                    // Create a container div for each image with image and delete button
                    const imageContainer = document.createElement('div');
                    imageContainer.classList.add('image-container');

                    // Create an img element for each file
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.alt = 'Selected Image';

                    // Create a delete button for each image
                    const deleteButton = document.createElement('button');
                    deleteButton.textContent = 'Delete';
                    deleteButton.classList.add('delete-button');
                    deleteButton.onclick = function () {
                        // Remove the container when delete button is clicked
                        container.removeChild(imageContainer);
                    };

                    // Append the img and delete button to the container div
                    imageContainer.appendChild(img);
                    imageContainer.appendChild(deleteButton);

                    // Append the container div to the main container
                    container.appendChild(imageContainer);
                };

                // Read the file as a data URL (this triggers the onload function)
                reader.readAsDataURL(files[i]);
            }
        }
    </script>


    <script>
        function deleteimg(button) {
            var productId = button.getAttribute('data-product-id');
            var imgIndex = button.getAttribute('data-image-index');
            console.log(productId, imgIndex);
            Swal.fire({
                title: "Are you sure?",
                text: `You want to Delete image!`,
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: `Yes, delete it!`
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/admin/deleteproductimg/?id=${productId}&index=${imgIndex}`, { method: "GET" })
                        .then(response => {
                            if (response.ok) {
                                Swal.fire({
                                    title: `delete`,
                                    text: `user were deleted`,
                                    icon: "success"
                                });
                                setTimeout(() => {
                                    location.reload()
                                }, 2000);
                            } else {
                                Swal.fire({
                                    title: "Error!",
                                    text: "Somthing Went Wrong.",
                                    icon: "error"
                                });
                            }
                        })

                }
            });
        }

    </script>


